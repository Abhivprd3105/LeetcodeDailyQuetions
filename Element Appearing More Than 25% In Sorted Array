class Solution {
public:
    int findSpecialInteger(vector<int>& arr) {

        int count=1;
       // if(arr.size()==1) return arr[0];
        for (int i = 0; i < arr.size()-1; i++) 
       {
           if(arr[i+1]!=arr[i]) count=1;
           if(arr[i]==arr[i+1]) count++; 
           if(count>=arr.size()/4+1) return arr[i];
       }
       return 1;
        
    }
};
